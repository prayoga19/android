<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".layout_code">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="left"
        android:text="Kode Keluarga"
        android:textColor="#000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:baselineAligned="false"
        android:gravity="left"
        android:text="ketikkan kode keluarga yang Ayah Bunda miliki disini"
        android:textSize="19dp" />

    <EditText
        android:id="@+id/kode"
        android:background="@drawable/bg_text"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text2"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:maxLength="6"
        android:inputType="textCapCharacters"
        android:textAllCaps="true"
        android:gravity="center"
       />
    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kode"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:textSize="14dp"
        android:text="@string/kode_keluarga"/>

    <Button
        android:background="@drawable/bg_btn"
        android:id="@+id/btnkode"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text3"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Masuk"
        android:textSize="15dp"
        android:textAllCaps="true"
        android:onClick="masuk"
        />

    <TextView
        android:id="@+id/text4"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnkode"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="241dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="Belum punya kode keluarga?"
        android:textColor="#482d7e"
        android:textSize="20dp" />

    <Button
        android:background="@drawable/bg_btn1"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text4"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Beli Kode Keluarga Disini"
        android:textSize="15dp"
        android:textColor="#fff"/>


</RelativeLayout>